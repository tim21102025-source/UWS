---
// src/components/common/Footer.astro
const currentYear = new Date().getFullYear();

// Base path for GitHub Pages subdirectory
const BASE_PATH = '/UWS';

const footerNavigation = {
  services: [
    { name: 'Встановлення вікон', href: BASE_PATH + '/services/ustanovka-okon' },
    { name: 'Ремонт вікон', href: BASE_PATH + '/services/remont-vikon' },
    { name: 'Балкони', href: BASE_PATH + '/services/balkony' },
    { name: 'Москітні сітки', href: BASE_PATH + '/services/moskitni-sitki' },
    { name: 'Склопакети', href: BASE_PATH + '/services/stepklopaketi' },
    { name: 'Доводчики', href: BASE_PATH + '/services/dovodchiki' },
  ],
  company: [
    { name: 'Про нас', href: BASE_PATH + '/about' },
    { name: 'Наші роботи', href: BASE_PATH + '/portfolio' },
    { name: 'Блог', href: BASE_PATH + '/blog' },
    { name: 'Ціни', href: BASE_PATH + '/prices' },
  ],
  info: [
    { name: 'Калькулятор', href: BASE_PATH + '/calculator' },
    { name: 'Контакти', href: BASE_PATH + '/contacts' },
    { name: 'Діагностика', href: BASE_PATH + '/diagnostics' },
    { name: 'Догляд за ПВХ', href: BASE_PATH + '/doglyad' },
  ],
  useful: [
    { name: 'FAQ', href: BASE_PATH + '/faq' },
    { name: 'Політика конфіденційності', href: BASE_PATH + '/privacy' },
    { name: 'Умови та гарантія', href: BASE_PATH + '/conditions' },
    { name: 'Акції', href: BASE_PATH + '/aktsiya' },
    { name: 'єВідновлення', href: BASE_PATH + '/vidnovlennya' },
  ],
};

const contactInfo = {
  phones: [
    { number: '+380660575202', operator: 'Vodafone', formatted: '(066) 057-52-02' },
    { number: '+380989478772', operator: 'Kyivstar', formatted: '(098) 947-87-72' },
    { number: '+380633664769', operator: 'Lifecell', formatted: '(063) 366-47-69' }
  ],
  email: 'uws.kyiv@gmail.com',
  workingHours: 'Пн-Пт: 09:00 - 19:00',
  weekendHours: 'Сб-Нд: 10:00 - 17:00',
  messengers: {
    viber: '+380730705280',
    telegram: '+380730705280',
    whatsapp: '+380730705280'
  }
};

const socialLinks = {
  facebook: 'https://www.facebook.com/uws.kyiv',
  instagram: 'https://www.instagram.com/uws_kyiv',
  telegram: 'https://t.me/uws_kyiv',
  viber: 'viber://chat?number=380730705280',
};
---

<footer class="bg-brand-dark text-white">
  <!-- Main footer content -->
  <div class="container py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Brand & About -->
      <div class="lg:col-span-2">
        <a href={BASE_PATH + '/'} class="inline-block" aria-label="UWS Home">
          <span class="text-3xl font-heading font-bold text-brand-yellow">UWS</span>
        </a>
        <p class="mt-4 text-gray-400 max-w-sm">
          Професійна установка вікон у Києві з 2010 року. Німецькі профілі REHAU, KBE, WDS з гарантією 5 років.
        </p>
        
        <!-- Social Links -->
        <div class="mt-6 flex items-center gap-3">
          <a 
            href={socialLinks.telegram}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-lg bg-gray-800 hover:bg-[#0088cc] hover:text-white transition-all duration-200 flex items-center justify-center"
            aria-label="Telegram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.562 8.161c-.18 1.897-.962 6.502-1.359 8.627-.168.9-.5 1.201-.82 1.23-.696.064-1.225-.46-1.901-.903-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.324-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
            </svg>
          </a>
          <a 
            href={socialLinks.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-lg bg-gray-800 hover:bg-[#1877F2] hover:text-white transition-all duration-200 flex items-center justify-center"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a 
            href={socialLinks.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-lg bg-gray-800 hover:bg-[#E4405F] hover:text-white transition-all duration-200 flex items-center justify-center"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
            </svg>
          </a>
          <a 
            href={socialLinks.viber}
            class="w-10 h-10 rounded-lg bg-gray-800 hover:bg-[#665CAC] hover:text-white transition-all duration-200 flex items-center justify-center"
            aria-label="Viber"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm.03 4.8c2.5 0 4.5 2.0 4.5 4.5 0 1.8-1.1 3.4-2.7 4.2l-2.1 2.1c-.3-.1-.6-.2-.9-.2-.3 0-.6.1-.9.2l-2.5-2.5c1.2-1.2 1.9-2.8 1.9-4.6 0-2.5-2-4.5-4.5-4.5S.03 5.3.03 7.8c0 2.1 1.5 3.9 3.4 4.4l.6.2c.3-.5.7-.9 1.2-1.2l.2.6c-.4 1.9-2.1 3.3-4 3.3-.3 0-.6-.1-.9-.2l-2.1 2.1c.8 1.6 2.4 2.7 4.2 2.7 2.5 0 4.5-2 4.5-4.5v-.9c.3.1.6.2.9.2.3 0 .6-.1.9-.2l2.1-2.1c-.5-1.6-2.3-2.7-4.2-2.7-2.1 0-3.9 1.5-4.4 3.4l-.6.2-.2-.6c-.1-.3-.2-.6-.2-.9 0-.3.1-.6.2-.9l2.5 2.5c-.1.3-.2.6-.2.9 0 1.8.7 3.4 1.9 4.6l-2.1 2.1c-.3.3-.4.7-.2 1.1l.4.9c.4.9 1.2 1.6 2.2 1.8.3.1.7.1 1 .1.6 0 1.2-.1 1.7-.4l2.8 2.8c.3.3.7.4 1.1.4.9 0 1.6-.7 1.6-1.6 0-.3-.1-.6-.2-.9l.4-.9c.1-.3.1-.6 0-.9l-2.1-2.1c.5-1.2.7-2.5.7-3.8 0-3.6-2.9-6.5-6.5-6.5-.4 0-.8.1-1.2.2l-2.8-2.8c.3-.5.4-1 .4-1.6 0-.9-.7-1.6-1.6-1.6-.4 0-.7.1-1 .4l-2.8 2.8c-.1-.4-.2-.8-.2-1.2 0-3.6 2.9-6.5 6.5-6.5.4 0 .8.1 1.2.2l2.8-2.8c-.3-.5-.4-1-.4-1.6z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-heading font-bold text-lg mb-4 text-brand-yellow">Послуги</h4>
        <ul class="space-y-3">
          {footerNavigation.services.map((item) => (
            <li>
              <a 
                href={item.href}
                class="text-gray-400 hover:text-brand-yellow transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="font-heading font-bold text-lg mb-4 text-brand-yellow">Компанія</h4>
        <ul class="space-y-3">
          {footerNavigation.company.map((item) => (
            <li>
              <a 
                href={item.href}
                class="text-gray-400 hover:text-brand-yellow transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="font-heading font-bold text-lg mb-4 text-brand-yellow">Контакти</h4>
        <ul class="space-y-3">
          <!-- Phones -->
          {contactInfo.phones.map((phone) => (
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-brand-yellow mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <a 
                href={`tel:${phone.number}`}
                class="text-gray-400 hover:text-brand-yellow transition-colors"
              >
                {phone.formatted}
                <span class={`text-xs ml-1 ${
                  phone.operator === 'Vodafone' ? 'text-red-400' : 
                  phone.operator === 'Kyivstar' ? 'text-green-400' : 
                  'text-purple-400'
                }`}>
                  {phone.operator}
                </span>
              </a>
            </li>
          ))}
          <!-- Email -->
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-brand-yellow mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a 
              href={`mailto:${contactInfo.email}`}
              class="text-gray-400 hover:text-brand-yellow transition-colors"
            >
              {contactInfo.email}
            </a>
          </li>
          <!-- Working Hours -->
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-brand-yellow mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div class="flex flex-col">
              <span class="text-gray-400">{contactInfo.workingHours}</span>
              <span class="text-gray-500 text-sm">{contactInfo.weekendHours}</span>
            </div>
          </li>
        </ul>
      </div>

      <!-- Useful Links -->
      <div>
        <h4 class="font-heading font-bold text-lg mb-4 text-brand-yellow">Корисне</h4>
        <ul class="space-y-3">
          {footerNavigation.useful.map((item) => (
            <li>
              <a 
                href={item.href}
                class="text-gray-400 hover:text-brand-yellow transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-gray-800">
    <div class="container py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-gray-400 text-sm">
          &copy; {currentYear} UWS. Всі права захищені.
        </p>
        <nav aria-label="Footer navigation">
          <ul class="flex items-center gap-6 text-sm">
            <li>
              <a 
                href={BASE_PATH + '/privacy'}
                class="text-gray-400 hover:text-brand-yellow transition-colors"
              >
                Політика конфіденційності
              </a>
            </li>
            <li>
              <a 
                href={BASE_PATH + '/terms'}
                class="text-gray-400 hover:text-brand-yellow transition-colors"
              >
                Умови використання
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</footer>
