---
// src/components/common/Footer.astro
const currentYear = new Date().getFullYear();

const footerNavigation = {
  services: [
    { name: 'Вікна', href: '/services/ustanovka-okon' },
    { name: 'Балкони', href: '/services/balkony' },
    { name: 'Двері', href: '/services/dovodchiki' },
    { name: 'Москітні сітки', href: '/services/moskitni-sitki' },
    { name: 'Ролетні системи', href: '/services/stepklopaketi' },
  ],
  company: [
    { name: 'Про нас', href: '/about' },
    { name: 'Наші роботи', href: '/portfolio' },
    { name: 'Блог', href: '/blog' },
    { name: 'Ціни', href: '/prices' },
  ],
  info: [
    { name: 'Калькулятор', href: '/calculator' },
    { name: 'Контакти', href: '/contacts' },
    { name: 'FAQ', href: '/faq' },
    { name: 'Політика конфіденційності', href: '/privacy' },
  ],
};

const contactInfo = {
  address: 'Київ, вул. Прикладна 1',
  phone: '+38 (044) 123-45-67',
  phoneFormatted: '+380441234567',
  email: 'info@uws.com.ua',
  workingHours: 'Пн-Пт: 9:00 - 18:00',
};

const socialLinks = {
  facebook: 'https://facebook.com/uws.com.ua',
  instagram: 'https://instagram.com/uws.com.ua',
};
---

<footer class="bg-brand-dark text-white">
  <!-- Main footer content -->
  <div class="container py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Brand & About -->
      <div class="lg:col-span-2">
        <a href="/" class="inline-block" aria-label="UWS Home">
          <span class="text-3xl font-heading font-bold text-brand-yellow">UWS</span>
        </a>
        <p class="mt-4 text-gray-400 max-w-sm">
          Професійна установка вікон у Києві з 2010 року. Німецькі профілі REHAU, KBE, WDS з гарантією 5 років.
        </p>
        
        <!-- Social Links -->
        <div class="mt-6 flex items-center gap-4">
          <a 
            href={socialLinks.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-lg bg-gray-800 hover:bg-brand-yellow hover:text-brand-dark transition-all duration-200 flex items-center justify-center"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a 
            href={socialLinks.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-lg bg-gray-800 hover:bg-brand-yellow hover:text-brand-dark transition-all duration-200 flex items-center justify-center"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-heading font-bold text-lg mb-4 text-brand-yellow">Послуги</h4>
        <ul class="space-y-3">
          {footerNavigation.services.map((item) => (
            <li>
              <a 
                href={item.href}
                class="text-gray-400 hover:text-brand-yellow transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="font-heading font-bold text-lg mb-4 text-brand-yellow">Компанія</h4>
        <ul class="space-y-3">
          {footerNavigation.company.map((item) => (
            <li>
              <a 
                href={item.href}
                class="text-gray-400 hover:text-brand-yellow transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="font-heading font-bold text-lg mb-4 text-brand-yellow">Контакти</h4>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-brand-yellow mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-gray-400">{contactInfo.address}</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-brand-yellow mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <div class="flex flex-col">
              <a 
                href={`tel:${contactInfo.phoneFormatted}`}
                class="text-gray-400 hover:text-brand-yellow transition-colors"
              >
                {contactInfo.phone}
              </a>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-brand-yellow mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a 
              href={`mailto:${contactInfo.email}`}
              class="text-gray-400 hover:text-brand-yellow transition-colors"
            >
              {contactInfo.email}
            </a>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-brand-yellow mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-gray-400">{contactInfo.workingHours}</span>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-gray-800">
    <div class="container py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-gray-400 text-sm">
          &copy; {currentYear} UWS. Всі права захищені.
        </p>
        <nav aria-label="Footer navigation">
          <ul class="flex items-center gap-6 text-sm">
            <li>
              <a 
                href="/privacy-policy"
                class="text-gray-400 hover:text-brand-yellow transition-colors"
              >
                Політика конфіденційності
              </a>
            </li>
            <li>
              <a 
                href="/terms"
                class="text-gray-400 hover:text-brand-yellow transition-colors"
              >
                Умови використання
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</footer>
