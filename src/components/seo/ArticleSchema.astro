---
interface Props {
  headline: string;
  description: string;
  url: string;
  image?: string;
  publishedDate: string;
  modifiedDate?: string;
  authorName: string;
  publisherName?: string;
  publisherLogo?: string;
  keywords?: string[];
}

const {
  headline,
  description,
  url,
  image = '/favicon.svg',
  publishedDate,
  modifiedDate = publishedDate,
  authorName = 'UWS',
  publisherName = 'UWS',
  publisherLogo = '/favicon.svg',
  keywords = [],
} = Astro.props;

const schema = JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: headline,
  description: description,
  url: url,
  image: image,
  datePublished: publishedDate,
  dateModified: modifiedDate,
  author: {
    '@type': 'Person',
    name: authorName,
  },
  publisher: {
    '@type': 'Organization',
    name: publisherName,
    logo: {
      '@type': 'ImageObject',
      url: publisherLogo,
    },
  },
  keywords: keywords.join(', '),
}, null, 2);
---

<script type="application/ld+json" set:html={schema} />
