---
// src/components/blocks/Testimonials.astro
interface Testimonial {
  name: string;
  text: string;
  rating: number;
  service: string;
  date?: string;
  image?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  testimonials?: Testimonial[];
}

const {
  title = 'Отзывы клиентов',
  subtitle = 'Более 5000 довольных клиентов в Киеве и области',
  testimonials = [
    {
      name: 'Андрей Петров',
      text: 'Заказывал установку окон в квартиру. Работали быстро и качественно. Окна REHAU, всё идеально. Бригада приехала вовремя, мусор за собой убрали. Рекомендую!',
      rating: 5,
      service: 'Установка окон',
      date: 'Январь 2024',
      image: '/images/testimonials/testimonials-1.jpg'
    },
    {
      name: 'Мария Коваленко',
      text: 'Остекляли балкон под ключ. Очень довольна результатом! Менеджер помог подобрать оптимальный вариант по бюджету. Работу выполнили за 2 дня, как и обещали.',
      rating: 5,
      service: 'Балконы',
      date: 'Декабрь 2023',
      image: '/images/testimonials/testimonials-2.jpg'
    },
    {
      name: 'Сергей Викторович',
      text: 'Ребята заменили стеклопакет в офисе. Работа выполнена профессионально, цена порадовала. Всё чётко по договору. Буду обращаться ещё.',
      rating: 5,
      service: 'Стеклопакеты',
      date: 'Январь 2024',
      image: '/images/testimonials/testimonials-3.jpg'
    },
    {
      name: 'Ольга Дмитриева',
      text: 'Заказывали остекление частного дома. Очень понравился подход к работе - всё замерили, рассчитали, предложили несколько вариантов. Качество на высоте!',
      rating: 5,
      service: 'Остекление дома',
      date: 'Февраль 2024',
      image: '/images/testimonials/testimonials-4.jpg'
    },
    {
      name: 'Михаил Семёнов',
      text: 'Установили новые двери на балкон. Работники вежливые, всё сделали аккуратно. Цена адекватная, без скрытых платежей.',
      rating: 5,
      service: 'Балконные двери',
      date: 'Март 2024',
      image: '/images/testimonials/testimonials-5.jpg'
    },
    {
      name: 'Елена Николаева',
      text: 'Осталась очень довольна москитными сетками! Приехали, всё замерили, через неделю уже установили. Качество отличное, рекомендую!',
      rating: 5,
      service: 'Москітні сітки',
      date: 'Март 2024',
      image: '/images/testimonials/testimonials-6.jpg'
    }
  ]
} = Astro.props;
---

<section class="section bg-gray-50 dark:bg-gray-900">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">{title}</h2>
      {subtitle && (
        <p class="text-gray-600 max-w-2xl mx-auto dark:text-gray-400">{subtitle}</p>
      )}
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-xl p-6 shadow-lg dark:bg-gray-800">
          <div class="flex items-center gap-4 mb-4">
            {testimonial.image && (
              <img 
                src={testimonial.image} 
                alt={testimonial.name}
                class="w-12 h-12 rounded-full object-cover"
              />
            )}
          </div>
          <p class="text-gray-600 mb-4 italic dark:text-gray-300">"{testimonial.text}"</p>
          <div class="border-t pt-4">
            <p class="font-bold dark:text-white">{testimonial.name}</p>
            <p class="text-sm text-gray-500">{testimonial.service}{testimonial.date && ` • ${testimonial.date}`}</p>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-8">
      <a href="/reviews" class="btn btn-outline">
        Все отзывы
      </a>
    </div>
  </div>
</section>
