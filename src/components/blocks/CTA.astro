---
// src/components/blocks/CTA.astro
interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  variant?: 'default' | 'dark' | 'gradient';
  showForm?: boolean;
}

const {
  title = 'Не знаете какие окна выбрать?',
  subtitle = 'Оставьте заявку и наш инженер бесплатно приедет на замер, проконсультирует и поможет подобрать оптимальное решение под ваш бюджет.',
  ctaText = 'Оставить заявку',
  ctaLink = '/contacts',
  variant = 'default',
  showForm = false
} = Astro.props;

const bgClass = {
  default: 'bg-gray-50 dark:bg-gray-900',
  dark: 'bg-brand-dark text-white',
  gradient: 'bg-gradient-to-br from-brand-gray to-brand-dark text-white'
}[variant];

const textVariant = variant === 'light' ? 'text-brand-dark' : 'text-white';
---

<section class={`section ${bgClass}`}>
  <div class="container">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-6">{title}</h2>
        <p class="text-lg opacity-90 mb-8">{subtitle}</p>
        {variant !== 'dark' && (
          <ul class="space-y-4 mb-8">
            <li class="flex items-center gap-3">
              <svg class="w-6 h-6 text-brand-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Бесплатный замер в пределах Киева</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-6 h-6 text-brand-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Точный расчет стоимости за 24 часа</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-6 h-6 text-brand-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Заключение официального договора</span>
            </li>
          </ul>
        )}
        {variant === 'dark' && (
          <div class="flex gap-4">
            <a href="tel:+380441234567" class="btn btn-primary">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Позвонить
            </a>
            <a href={ctaLink} class="btn btn-outline border-white text-white hover:bg-white hover:text-brand-dark">
              {ctaText}
            </a>
          </div>
        )}
        {variant !== 'dark' && (
          <a href={ctaLink} class="btn btn-primary text-lg">
            {ctaText}
          </a>
        )}
      </div>
      
      {showForm && (
        <div class="bg-white rounded-xl p-8 text-brand-dark shadow-xl">
          <h3 class="text-2xl font-heading font-bold mb-6">Оставить заявку</h3>
          <form class="space-y-4">
            <div>
              <label for="cta-name" class="block text-sm font-medium mb-1">Ваше имя</label>
              <input
                type="text"
                id="cta-name"
                name="name"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-brand-yellow focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                placeholder="Иван"
                required
              />
            </div>
            <div>
              <label for="cta-phone" class="block text-sm font-medium mb-1">Телефон</label>
              <input
                type="tel"
                id="cta-phone"
                name="phone"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-brand-yellow focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                placeholder="+38 (0__) ___-__-__"
                required
              />
            </div>
            <button type="submit" class="w-full btn btn-primary text-lg">
              Заказать консультацию
            </button>
            <p class="text-xs text-gray-500 text-center">
              Нажимая кнопку, вы соглашаетесь с политикой конфиденциальности
            </p>
          </form>
        </div>
      )}
    </div>
  </div>
</section>
