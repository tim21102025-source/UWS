---
// src/components/blocks/Hero.astro
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryText?: string;
  secondaryLink?: string;
  variant?: 'default' | 'dark' | 'light';
  bgImage?: string;
}

const {
  title,
  subtitle,
  ctaText = 'Рассчитать стоимость',
  ctaLink = '/calculator',
  secondaryText = 'Связаться с нами',
  secondaryLink = '/contacts',
  variant = 'default',
  bgImage = '/images/hero-bg.jpg'
} = Astro.props;

const bgClass = {
  default: 'bg-gradient-to-br from-brand-gray to-brand-dark text-white',
  dark: 'bg-brand-dark text-white',
  light: 'bg-gray-50 text-brand-dark'
}[variant];
---

<section class={`relative py-20 lg:py-32 ${bgClass}`}>
  {/* Background Image */}
  {bgImage && (
    <div class="absolute inset-0 z-0">
      <img 
        src={bgImage} 
        alt=""
        class="w-full h-full object-cover opacity-20"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-brand-dark/80 to-brand-dark/60"></div>
    </div>
  )}
  <div class="container relative z-10">
    <div class="max-w-3xl animate-slide-up">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6">
        {title}
      </h1>
      <p class="text-xl md:text-2xl text-gray-200 mb-8 text-balance dark:text-gray-300">
        {subtitle}
      </p>
      {ctaText && (
        <div class="flex flex-wrap gap-4">
          <a href={ctaLink} class="btn btn-primary text-lg">
            {ctaText}
          </a>
          {secondaryText && (
            <a href={secondaryLink} class="btn btn-outline border-white text-white hover:bg-white hover:text-brand-dark dark:border-gray-300 dark:text-gray-200 dark:hover:bg-gray-100 dark:hover:text-brand-dark">
              {secondaryText}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
  
  <!-- Decorative elements -->
  <div class="absolute top-0 right-0 w-1/3 h-full opacity-10 pointer-events-none hidden lg:block">
    <svg viewBox="0 0 200 200" class="w-full h-full">
      <defs>
        <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
          <path d="M 20 0 L 0 0 0 20" fill="none" stroke="currentColor" stroke-width="0.5"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>
</section>
