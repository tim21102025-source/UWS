---
/**
 * Badge Component
 * 
 * Компонент для отображения статусов и меток
 * 
 * @example
 * <Badge variant="success">Успех</Badge>
 * <Badge variant="error" size="sm">Ошибка</Badge>
 */

interface Props {
  /** Вариант стиля */
  variant?: 'default' | 'success' | 'warning' | 'error' | 'info';
  /** Размер */
  size?: 'sm' | 'md';
  /** Скруглённые углы */
  rounded?: boolean;
  /** Дополнительные классы */
  class?: string;
}

const {
  variant = 'default',
  size = 'md',
  rounded = true,
  class: className = '',
} = Astro.props;

// Варианты цветов
const variantClasses = {
  default: 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200',
  success: 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400',
  warning: 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400',
  error: 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400',
  info: 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400',
};

// Размеры
const sizeClasses = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-2.5 py-1 text-sm',
};

const roundedClass = rounded ? 'rounded-full' : 'rounded';
const variantClass = variantClasses[variant];
const sizeClass = sizeClasses[size];

const classes = `inline-flex items-center font-medium ${variantClass} ${sizeClass} ${roundedClass} ${className}`;
---

<span class={classes}>
  <slot />
</span>
