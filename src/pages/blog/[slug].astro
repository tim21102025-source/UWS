---
// src/pages/blog/[slug].astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/blocks/Hero.astro';
import CTA from '../../components/blocks/CTA.astro';
import ContactsMap from '../../components/blocks/ContactsMap.astro';
import ArticleSchema from '../../components/seo/ArticleSchema.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts
    .filter(post => post.data.published)
    .map(post => ({
      params: { slug: post.slug },
      props: { post }
    }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: post.data.title,
  description: post.data.description,
  datePublished: post.data.publishedDate,
  author: {
    '@type': 'Person',
    name: post.data.author || 'UWS Team'
  },
  publisher: {
    '@type': 'Organization',
    name: 'UWS',
    logo: {
      '@type': 'ImageObject',
      url: 'https://uws.com.ua/favicon.svg'
    }
  }
};
---

<BaseLayout 
  title={`${post.data.title} - Блог UWS`}
  description={post.data.description}
  schema={schema}
>
  <ArticleSchema 
    title={post.data.title}
    description={post.data.description}
    publishedDate={post.data.publishedDate}
    author={post.data.author}
  />

  <!-- Article Header -->
  <section class="section pt-24">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-6">
          <a href="/" class="hover:text-brand-yellow">Главная</a>
          <span>/</span>
          <a href="/blog" class="hover:text-brand-yellow">Блог</a>
          <span>/</span>
          <span class="text-gray-900 dark:text-white">{post.data.title}</span>
        </nav>

        <!-- Title -->
        <h1 class="text-3xl md:text-4xl font-heading font-bold mb-4 dark:text-white">
          {post.data.title}
        </h1>

        <!-- Meta -->
        <div class="flex flex-wrap items-center gap-4 text-gray-500 mb-8">
          <time datetime={post.data.publishedDate}>
            {new Date(post.data.publishedDate).toLocaleDateString('uk-UA', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <span>•</span>
          <span>{post.data.author}</span>
          {post.data.tags && post.data.tags.length > 0 && (
            <>
              <span>•</span>
              <div class="flex gap-2">
                {post.data.tags.slice(0, 3).map(tag => (
                  <span class="bg-gray-100 px-2 py-1 rounded text-xs dark:bg-gray-700">
                    #{tag}
                  </span>
                ))}
              </div>
            </>
          )}
        </div>

        <!-- Featured Image -->
        {post.data.image && (
          <div class="mb-8 rounded-xl overflow-hidden shadow-lg">
            <img 
              src={post.data.image} 
              alt={post.data.title}
              class="w-full h-auto"
            />
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Article Content -->
  <section class="section">
    <div class="container">
      <article class="max-w-4xl mx-auto prose prose-lg dark:prose-invert">
        <Content />
      </article>
    </div>
  </section>

  <!-- Share -->
  <section class="section bg-gray-50 dark:bg-gray-900">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-xl font-heading font-bold mb-4 dark:text-white">Поделиться статьёй</h2>
        <div class="flex gap-3">
          <a 
            href={`https://www.facebook.com/sharer/sharer.php?u=https://uws.com.ua/blog/${post.slug}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-blue-600 text-white rounded-lg flex items-center justify-center hover:bg-blue-700 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.77,7.46H14.5v-1.9c0-.9.6-1.1,1-1.1h3V.5h-4.33C10.24.5,9.5,3.44,9.5,5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4Z"/>
            </svg>
          </a>
          <a 
            href={`https://t.me/share/url?url=https://uws.com.ua/blog/${post.slug}&text=${encodeURIComponent(post.data.title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-blue-400 text-white rounded-lg flex items-center justify-center hover:bg-blue-500 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
            </svg>
          </a>
          <a 
            href={`https://www.linkedin.com/sharing/share-offsite/?url=https://uws.com.ua/blog/${post.slug}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 bg-blue-700 text-white rounded-lg flex items-center justify-center hover:bg-blue-800 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Posts -->
  <section class="section">
    <div class="container">
      <h2 class="text-2xl font-heading font-bold mb-6 dark:text-white">Читайте также</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {(await getCollection('blog'))
          .filter(p => p.data.published && p.slug !== post.slug)
          .sort((a, b) => new Date(b.data.publishedDate).getTime() - new Date(a.data.publishedDate).getTime())
          .slice(0, 3)
          .map(relatedPost => (
            <a href={`/blog/${relatedPost.slug}`} class="group">
              <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all dark:bg-gray-800">
                {relatedPost.data.image && (
                  <div class="aspect-video overflow-hidden">
                    <img 
                      src={relatedPost.data.image} 
                      alt={relatedPost.data.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                )}
                <div class="p-4">
                  <h3 class="font-heading font-bold mb-2 group-hover:text-brand-yellow transition-colors dark:text-white">
                    {relatedPost.data.title}
                  </h3>
                  <p class="text-gray-600 text-sm line-clamp-2 dark:text-gray-400">
                    {relatedPost.data.description}
                  </p>
                </div>
              </article>
            </a>
          ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <CTA
    title="Нужна консультация?"
    subtitle="Наши эксперты помогут выбрать оптимальное решение для ваших окон"
    ctaText="Получить консультацию"
    ctaLink="/contacts"
  />

  <!-- Contacts -->
  <ContactsMap
    title="Контакты"
    showMap={true}
  />
</BaseLayout>
