---
// src/pages/services/[slug].astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/blocks/Hero.astro';
import Features from '../../components/blocks/Features.astro';
import CTA from '../../components/blocks/CTA.astro';
import FAQ from '../../components/blocks/FAQ.astro';
import ContactsMap from '../../components/blocks/ContactsMap.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const services = await getCollection('services');
  return services
    .filter(service => service.data.published)
    .map(service => ({
      params: { slug: service.slug },
      props: { service }
    }));
}

const { service } = Astro.props;
const { Content } = await service.render();

const BASE_PATH = '/UWS';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: service.data.title,
  description: service.data.description,
  provider: {
    '@type': 'Organization',
    name: 'UWS'
  },
  offers: {
    '@type': 'Offer',
    price: service.data.price?.replace(/[^\d.]/g, '') || '0',
    priceCurrency: 'UAH'
  }
};
---

<BaseLayout 
  title={`${service.data.title} - Услуги UWS`}
  description={service.data.description}
  schema={schema}
>
  <Hero
    title={service.data.title}
    subtitle={service.data.description}
    ctaText="Рассчитать стоимость"
    ctaLink={BASE_PATH + '/calculator'}
    secondaryText="Заказать звонок"
    secondaryLink={BASE_PATH + '/contacts'}
    variant="dark"
  />

  <!-- Price -->
  {service.data.price && (
    <section class="section">
      <div class="container">
        <div class="bg-white rounded-xl p-8 shadow-lg max-w-md dark:bg-gray-800">
          <p class="text-sm text-gray-500 mb-2">Стоимость услуги</p>
          <p class="text-4xl font-heading font-bold text-brand-yellow">{service.data.price}</p>
          <p class="text-gray-600 mt-2 dark:text-gray-400">Точная цена после замера</p>
          <a href={BASE_PATH + '/calculator'} class="btn btn-primary w-full mt-4">
            Рассчитать точную стоимость
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Content -->
  <section class="section bg-gray-50 dark:bg-gray-900">
    <div class="container">
      <div class="max-w-4xl mx-auto prose dark:prose-invert">
        <Content />
      </div>
    </div>
  </section>

  <!-- Features -->
  {service.data.features && service.data.features.length > 0 && (
    <section class="section">
      <div class="container">
        <h2 class="text-2xl md:text-3xl font-heading font-bold mb-8 text-center">Преимущества</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {service.data.features.map((feature) => (
            <div class="flex items-start gap-4 p-4 bg-white rounded-xl shadow-lg dark:bg-gray-800">
              <div class="w-10 h-10 bg-brand-yellow/20 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-brand-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-heading font-bold mb-1 dark:text-white">{feature}</h3>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Steps -->
  <section class="section bg-brand-dark text-white">
    <div class="container">
      <h2 class="text-2xl md:text-3xl font-heading font-bold mb-8 text-center">Этапы работы</h2>
      <div class="grid md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-yellow text-brand-dark rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            1
          </div>
          <h3 class="font-heading font-bold mb-2">Замер</h3>
          <p class="text-gray-300 text-sm">Бесплатный выезд замерщика в удобное время</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-yellow text-brand-dark rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            2
          </div>
          <h3 class="font-heading font-bold mb-2">Расчёт</h3>
          <p class="text-gray-300 text-sm">Точная смета и согласование материалов</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-yellow text-brand-dark rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            3
          </div>
          <h3 class="font-heading font-bold mb-2">Производство</h3>
          <p class="text-gray-300 text-sm">Изготовление на собственном производстве</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-yellow text-brand-dark rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            4
          </div>
          <h3 class="font-heading font-bold mb-2">Монтаж</h3>
          <p class="text-gray-300 text-sm">Профессиональная установка бригадой</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <FAQ
    title="Частые вопросы"
    subtitle="Ответы на популярные вопросы об услуге"
  />

  <!-- CTA -->
  <CTA
    title={`Заказать ${service.data.title.toLowerCase()}`}
    subtitle="Оставьте заявку и получите бесплатный замер и консультацию"
    ctaText="Оставить заявку"
    ctaLink={BASE_PATH + '/contacts'}
    showForm={true}
  />

  <!-- Contacts -->
  <ContactsMap
    title="Контакты"
    showMap={true}
  />
</BaseLayout>
