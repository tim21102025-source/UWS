---
// src/pages/about.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/blocks/Hero.astro';
import Features from '../components/blocks/Features.astro';
import Testimonials from '../components/blocks/Testimonials.astro';
import CTA from '../components/blocks/CTA.astro';
import ContactsMap from '../components/blocks/ContactsMap.astro';

const pageTitle = 'Про компанію UWS - Професійне встановлення вікон у Києві';
const pageDescription = 'UWS - лідер з встановлення вікон у Києві. Більше 15 років досвіту, 5000+ задоволених клієнтів. Німецькі профілі REHAU, KBE, WDS з гарантією 5 років.';

// Company statistics
const stats = [
  { value: '15+', label: 'Років досвіду' },
  { value: '5000+', label: 'Задоволених клієнтів' },
  { value: '12000+', label: 'Встановлених вікон' },
  { value: '5 років', label: 'Офіційної гарантії' }
];

// Team members
const team = [
  {
    name: 'Олексій Смірнов',
    position: 'Директор компанії',
    experience: '15 років у віконній індустрії',
    image: '/images/team/team-1.jpg'
  },
  {
    name: 'Дмитро Коваленко',
    position: 'Технічний директор',
    experience: 'Сертифікований інженер',
    image: '/images/team/team-2.jpg'
  },
  {
    name: 'Андрій Петров',
    position: 'Керівник монтажних бригад',
    experience: '12 років досвіду монтажу',
    image: '/images/team/team-3.jpg'
  }
];

// Partners
const partners = [
  { name: 'REHAU', description: 'Німецький профіль преміум-класу' },
  { name: 'KBE', description: 'Німецькі віконні системи' },
  { name: 'WDS', description: 'Сучасні профільні системи' },
  { name: 'Roto', description: 'Преміум фурнітура' },
  { name: 'MACO', description: 'Австрійська фурнітура' },
  { name: 'Siegenia', description: 'Німецькі доводчики' }
];
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
>
  <!-- Hero Section -->
  <Hero
    title="Про компанію UWS"
    subtitle="Ми - лідер з встановлення вікон у Києві з більш ніж 15-річним досвідом роботи. Робимо якісні німецькі вікна доступними для кожної сім'ї."
    ctaText="Розрахувати вартість"
    ctaLink="/calculator"
    variant="dark"
  />

  <!-- Stats Section -->
  <section class="section bg-brand-dark text-white">
    <div class="container">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <p class="text-4xl md:text-5xl font-heading font-bold text-brand-yellow mb-2">{stat.value}</p>
            <p class="text-gray-300">{stat.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- History & Mission -->
  <section class="section">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-heading font-bold mb-6">Наша історія</h2>
          <div class="space-y-4 text-gray-600 dark:text-gray-400">
            <p>
              Компанія UWS була заснована у 2008 році групою фахівців з багаторічним досвідом роботи у віконній індустрії. 
              Ми починали з невеликої команди монтажників, але вже через рік стали одним з лідерів ринку віконних конструкцій у Києві.
            </p>
            <p>
              Наша місія - зробити якісні німецькі вікна доступними для кожної української сім'ї. 
              Ми не економимо на матеріалах і завжди використовуємо тільки сертифіковані профілі та фурнітуру.
            </p>
            <p>
              Сьогодні UWS - це сучасна компанія з власним виробництвом, 
              кваліфікованими монтажними бригадами та складом матеріалів. 
              Ми обслуговуємо понад 500 клієнтів на рік і продовжуємо зростати.
            </p>
          </div>
        </div>
        <div class="bg-gradient-to-br from-brand-gray to-brand-dark rounded-xl h-[400px] relative overflow-hidden">
          <img 
            src="/images/about-2.jpg" 
            alt="Офіс UWS"
            class="w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-brand-dark/50 flex items-center justify-center">
            <div class="text-center text-white p-8">
              <p class="text-xl font-bold">З 2008 року</p>
              <p class="text-gray-300">надійний партнер вашого комфорту</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <Features
    title="Наші переваги"
    subtitle="Чому клієнти вибирають UWS"
    variant="icons"
    bgVariant="light"
  />

  <!-- Partners -->
  <section class="section">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">Наші партнери</h2>
        <p class="text-gray-600 max-w-2xl mx-auto dark:text-gray-400">
          Ми працюємо тільки з перевіреними виробниками віконних систем та фурнітури
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {partners.map((partner) => (
          <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow dark:bg-gray-800">
            <h3 class="text-xl font-heading font-bold mb-2 dark:text-white">{partner.name}</h3>
            <p class="text-gray-600 dark:text-gray-400">{partner.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Team -->
  <section class="section bg-gray-50 dark:bg-gray-900">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">Наша команда</h2>
        <p class="text-gray-600 max-w-2xl mx-auto dark:text-gray-400">
          Кваліфіковані спеціалісти з багаторічним досвідом роботи
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {team.map((member) => (
          <div class="bg-white rounded-xl overflow-hidden shadow-lg dark:bg-gray-800">
            <div class="h-64 bg-gradient-to-br from-brand-gray to-brand-dark relative overflow-hidden">
              {member.image ? (
                <img 
                  src={member.image} 
                  alt={member.name}
                  class="w-full h-full object-cover"
                />
              ) : (
                <svg class="w-24 h-24 text-brand-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              )}
            </div>
            <div class="p-6">
              <h3 class="text-xl font-heading font-bold mb-1 dark:text-white">{member.name}</h3>
              <p class="text-brand-yellow font-medium mb-2">{member.position}</p>
              <p class="text-gray-600 text-sm dark:text-gray-400">{member.experience}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <Testimonials
    title="Відгуки про роботу"
    subtitle="Що говорять наші клієнти"
  />

  <!-- CTA -->
  <CTA
    title="Готові замовити вікна?"
    subtitle="Залиште заявку та отримайте безкоштовний замір та консультацію фахівця"
    ctaText="Залишити заявку"
    ctaLink="/contacts"
    variant="gradient"
  />

  <!-- Contacts Map -->
  <ContactsMap
    title="Контакти"
    showMap={true}
  />
</BaseLayout>
