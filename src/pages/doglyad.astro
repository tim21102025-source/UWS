---
// src/pages/doglyad.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/blocks/Hero.astro';
import CTA from '../components/blocks/CTA.astro';

const pageTitle = 'Догляд за вікнами ПВХ | UWS';
const pageDescription: string = 'Правильний догляд за вікнами ПВХ забезпечить їх довговічність. Рекомендації з чистки, змащування та обслуговування вікон.';

// Base path for GitHub Pages subdirectory
const BASE_PATH = '/UWS';

const careTips = [
  {
    title: 'Регулярне чищення',
    description: 'Мийте вікна м\'якою тканиною з мильним розчином. Уникайте агресивних миючих засобів та абразивних матеріалів.',
    icon: 'M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z'
  },
  {
    title: 'Змащування фурнітури',
    description: 'Змащуйте ручки та петлі силіконовим або машинним маслом 2 рази на рік — навесні та восени.',
    icon: 'M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4'
  },
  {
    title: 'Перевірка ущільнювачів',
    description: 'Оглядайте гумові ущільнювачі на наявність тріщин. Заміняйте пошкоджені ущільнювачі одразу.',
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z'
  },
  {
    title: 'Водовідведення',
    description: 'Перевіряйте та чистіть водовідвідні отвори у рамах. Забиті отвори можуть призвести до конденсату.',
    icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z'
  },
  {
    title: 'Регулювання стулок',
    description: 'Якщо стулка провисає або погано закривається — викликайте інженера для регулювання. Це безкоштовно перший рік.',
    icon: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z M15 12a3 3 0 11-6 0 3 3 0 016 0z'
  },
  {
    title: 'Захист від механічних пошкоджень',
    description: 'Не допускайте ударів по профілю та склу. Не ставьте важкі предмети на підвіконня біля вікна.',
    icon: 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z'
  }
];

const seasonalTips = [
  {
    season: 'Весна',
    tips: [
      'Повне чищення рам та склопакетах',
      'Змащування всіх рухомих частин фурнітури',
      'Перевірка ущільнювачів після зими',
      'Регулювання стулок при необхідності'
    ]
  },
  {
    season: 'Літо',
    tips: [
      'Частіше мийте вікна від пилу',
      'Перевіряйте роботу мікропровітрювання',
      'Не залишайте вікна відкритими під час дощу',
      'Чистіть водовідвідні отвори'
    ]
  },
  {
    season: 'Осінь',
    tips: [
      'Підготовка до холодного періоду',
      'Повторне змащування фурнітури',
      'Перевірка герметичності ущільнювачів',
      'Регулювання притиску стулок'
    ]
  },
  {
    season: 'Зима',
    tips: [
      'Не мийте вікна при мінусовій температурі',
      'Регулярно провітрюйте приміщення',
      'Прибирайте сніг з підвіконня',
      'Слідкуйте за утворенням конденсату'
    ]
  }
];
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
>
  <Hero
    title="Догляд за вікнами ПВХ"
    subtitle="Правильний догляд — запорука довговічності ваших вікон. Дізнайтеся, як продовжити термін служби віконних конструкцій."
    variant="dark"
  />

  <section class="section">
    <div class="container">
      <div class="max-w-5xl mx-auto">
        
        <!-- Why Care Matters -->
        <div class="mb-12">
          <h2 class="text-3xl font-heading font-bold mb-6 dark:text-white text-center">Чому важливо доглядати за вікнами</h2>
          <div class="bg-brand-yellow/10 border border-brand-yellow rounded-xl p-8">
            <p class="text-lg dark:text-gray-300 mb-4">
              Вікна ПВХ — це складна система, яка потребує регулярного обслуговування. 
              При належному догляді термін служби вікон може досягати <strong>40-50 років</strong>.
            </p>
            <p class="text-lg dark:text-gray-300">
              Нехтування простими правилами обслуговування може призвести до:</p>
            <ul class="grid md:grid-cols-2 gap-3 mt-4">
              <li class="flex items-center gap-2 dark:text-gray-300">
                <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Погіршення теплоізоляції
              </li>
              <li class="flex items-center gap-2 dark:text-gray-300">
                <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Поява протягів та продувань
              </li>
              <li class="flex items-center gap-2 dark:text-gray-300">
                <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Передчасний знос фурнітури
              </li>
              <li class="flex items-center gap-2 dark:text-gray-300">
                <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Деформація профілю
              </li>
            </ul>
          </div>
        </div>

        <!-- Care Tips -->
        <div class="mb-12">
          <h2 class="text-3xl font-heading font-bold mb-8 dark:text-white text-center">Основні правила догляду</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {careTips.map((tip) => (
              <div class="bg-white p-6 rounded-xl shadow-lg dark:bg-gray-800">
                <div class="w-12 h-12 bg-brand-yellow/20 rounded-lg flex items-center justify-center mb-4">
                  <svg class="w-6 h-6 text-brand-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={tip.icon} />
                  </svg>
                </div>
                <h3 class="text-xl font-bold mb-2 dark:text-white">{tip.title}</h3>
                <p class="text-gray-600 dark:text-gray-400">{tip.description}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Seasonal Tips -->
        <div class="mb-12">
          <h2 class="text-3xl font-heading font-bold mb-8 dark:text-white text-center">Сезонне обслуговування</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            {seasonalTips.map((season) => (
              <div class="bg-gradient-to-br from-brand-yellow/20 to-brand-yellow/5 rounded-xl p-6 border border-brand-yellow/30">
                <h3 class="text-xl font-bold mb-4 text-brand-dark">{season.season}</h3>
                <ul class="space-y-3">
                  {season.tips.map((tip) => (
                    <li class="flex items-start gap-2">
                      <svg class="w-4 h-4 text-brand-yellow mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-sm dark:text-gray-300">{tip}</span>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>

        <!-- What NOT to Do -->
        <div class="mb-12">
          <h2 class="text-3xl font-heading font-bold mb-6 dark:text-white text-center">Чого не варто робити</h2>
          <div class="bg-red-50 border border-red-200 rounded-xl p-6">
            <div class="grid md:grid-cols-2 gap-4">
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span class="dark:text-gray-300">Використовувати абразивні миючі засоби</span>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span class="dark:text-gray-300">Чистити скло при температурі нижче -5°C</span>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span class="dark:text-gray-300">Застосовувати розчинники та ацетон</span>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span class="dark:text-gray-300">Самостійно розбирати фурнітуру</span>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span class="dark:text-gray-300">Використовувати металеві губки</span>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span class="dark:text-gray-300">Ставити гарячі предмети на підвіконня</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Professional Service -->
        <div class="mb-12">
          <h2 class="text-3xl font-heading font-bold mb-6 dark:text-white text-center">Професійне обслуговування</h2>
          <div class="bg-white rounded-xl shadow-lg p-8 dark:bg-gray-800">
            <div class="flex flex-col md:flex-row gap-8 items-center">
              <div class="flex-1">
                <h3 class="text-2xl font-bold mb-4 dark:text-white">Сервісне обслуговування від UWS</h3>
                <p class="text-gray-600 dark:text-gray-400 mb-4">
                  Ми пропонуємо повний комплекс послуг з обслуговування вікон ПВХ. 
                  Наші інженери проведуть діагностику, регулювання та заміну зношених деталей.
                </p>
                <ul class="space-y-2 mb-6">
                  <li class="flex items-center gap-2 dark:text-gray-300">
                    <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Безкоштовна діагностика
                  </li>
                  <li class="flex items-center gap-2 dark:text-gray-300">
                    <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Гарантія на всі роботи
                  </li>
                  <li class="flex items-center gap-2 dark:text-gray-300">
                    <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Оригінальні запчастини
                  </li>
                  <li class="flex items-center gap-2 dark:text-gray-300">
                    <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Виїзд у зручний для вас час
                  </li>
                </ul>
                <a href={`${BASE_PATH}/contacts`} class="btn btn-primary">
                  Замовити обслуговування
                </a>
              </div>
              <div class="w-full md:w-64 h-48 bg-gray-100 rounded-xl flex items-center justify-center dark:bg-gray-700">
                <svg class="w-20 h-20 text-brand-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                </svg>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <CTA
    title="Потрібна консультація?"
    subtitle="Наш фахівець відповість на всі ваші запитання щодо догляду за вікнами."
    ctaText="Зв'язатися з нами"
    ctaLink={`${BASE_PATH}/contacts`}
    showForm={false}
  />
</BaseLayout>
