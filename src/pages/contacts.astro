---
// src/pages/contacts.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/blocks/Hero.astro';
import ContactsMap from '../components/blocks/ContactsMap.astro';

const pageTitle = 'Контакты UWS - Связаться с нами';
const pageDescription = 'Контактная информация компании UWS. Телефон, адрес, email, график работы. Офис в Киеве.';

// Contact data
const contacts = {
  phones: [
    { number: '+380660575202', operator: 'Vodafone', formatted: '(066) 057-52-02' },
    { number: '+380989478772', operator: 'Kyivstar', formatted: '(098) 947-87-72' },
    { number: '+380633664769', operator: 'Lifecell', formatted: '(063) 366-47-69' }
  ],
  email: 'uws.kyiv@gmail.com',
  address: 'Київ, Київська область',
  workingHours: {
    weekdays: 'Пн-Пт: 09:00 - 19:00',
    saturday: 'Сб: 10:00 - 17:00',
    sunday: 'Нд: 10:00 - 17:00'
  },
  messengers: {
    viber: '+380730705280',
    telegram: '+380730705280',
    whatsapp: '+380730705280'
  },
  social: {
    facebook: 'https://www.facebook.com/uws.kyiv',
    instagram: 'https://www.instagram.com/uws_kyiv'
  }
};

// Services list for form
const services = [
  'Установка окон',
  'Ремонт окон',
  'Балконы',
  'Москітні сітки',
  'Стеклопакеты',
  'Доводчики',
  'Другое'
];
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
>
  <Hero
    title="Контакты"
    subtitle="Свяжитесь с нами удобным способом. Мы всегда рады помочь с выбором окон и ответить на ваши вопросы."
    variant="dark"
  />

  <!-- Contact Cards -->
  <section class="section">
    <div class="container">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
        <!-- Phones Dropdown -->
        <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all dark:bg-gray-800">
          <div class="w-12 h-12 bg-brand-yellow/20 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-brand-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="font-heading font-bold mb-3 dark:text-white">Телефоны</h3>
          <div class="flex flex-col gap-2">
            {contacts.phones.map((phone) => (
              <a 
                href={`tel:${phone.number}`}
                class="text-brand-yellow font-medium hover:text-brand-dark transition-colors"
              >
                {phone.formatted}
                <span class={`text-xs ml-2 px-2 py-0.5 rounded ${
                  phone.operator === 'Vodafone' ? 'bg-red-100 text-red-600' : 
                  phone.operator === 'Kyivstar' ? 'bg-green-100 text-green-600' : 
                  'bg-purple-100 text-purple-600'
                }`}>
                  {phone.operator}
                </span>
              </a>
            ))}
          </div>
        </div>

        <!-- Messengers -->
        <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all dark:bg-gray-800">
          <div class="w-12 h-12 bg-brand-yellow/20 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-brand-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <h3 class="font-heading font-bold mb-3 dark:text-white">Мессенджеры</h3>
          <div class="flex flex-wrap gap-2">
            <a 
              href={`viber://chat?number=${contacts.messengers.viber}`}
              class="px-3 py-1.5 bg-purple-100 text-purple-600 rounded-lg text-sm hover:bg-purple-200 transition-colors"
              title="Viber"
            >
              Viber
            </a>
            <a 
              href={`https://t.me/${contacts.messengers.telegram.replace('+', '')}`}
              target="_blank"
              class="px-3 py-1.5 bg-blue-100 text-blue-600 rounded-lg text-sm hover:bg-blue-200 transition-colors"
              title="Telegram"
            >
              Telegram
            </a>
            <a 
              href={`https://wa.me/${contacts.messengers.whatsapp}`}
              target="_blank"
              class="px-3 py-1.5 bg-green-100 text-green-600 rounded-lg text-sm hover:bg-green-200 transition-colors"
              title="WhatsApp"
            >
              WhatsApp
            </a>
          </div>
        </div>

        <!-- Email -->
        <a 
          href={`mailto:${contacts.email}`}
          class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all group dark:bg-gray-800"
        >
          <div class="w-12 h-12 bg-brand-yellow/20 rounded-lg flex items-center justify-center mb-4 group-hover:bg-brand-yellow transition-colors">
            <svg class="w-6 h-6 text-brand-yellow group-hover:text-brand-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="font-heading font-bold mb-2 dark:text-white">Email</h3>
          <p class="text-brand-yellow font-medium">{contacts.email}</p>
          <p class="text-gray-500 text-sm mt-1">Ответим в течение 2 часов</p>
        </a>

        <!-- Working Hours -->
        <div class="bg-white rounded-xl p-6 shadow-lg dark:bg-gray-800">
          <div class="w-12 h-12 bg-brand-yellow/20 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-brand-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-heading font-bold mb-2 dark:text-white">График работы</h3>
          <p class="text-brand-yellow font-medium">{contacts.workingHours.weekdays}</p>
          <p class="text-gray-500 text-sm mt-1">{contacts.workingHours.saturday}</p>
          <p class="text-gray-500 text-sm">{contacts.workingHours.sunday}</p>
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white rounded-xl p-8 shadow-lg dark:bg-gray-800">
          <h2 class="text-2xl font-heading font-bold mb-6 dark:text-white">Оставить заявку</h2>
          <form class="space-y-4" id="contact-form">
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-sm font-medium mb-1 dark:text-gray-300">Ваше имя *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-brand-yellow focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                  placeholder="Иван"
                  required
                />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium mb-1 dark:text-gray-300">Телефон *</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-brand-yellow focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                  placeholder="+38 (0__) ___-__-__"
                  required
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium mb-1 dark:text-gray-300">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-brand-yellow focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                placeholder="example@mail.com"
              />
            </div>

            <div>
              <label for="service" class="block text-sm font-medium mb-1 dark:text-gray-300">Услуга</label>
              <select
                id="service"
                name="service"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-brand-yellow focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white"
              >
                {services.map((service) => (
                  <option value={service}>{service}</option>
                ))}
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium mb-1 dark:text-gray-300">Сообщение</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-brand-yellow focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                placeholder="Опишите вашу задачу..."
              ></textarea>
            </div>

            <button type="submit" class="w-full btn btn-primary text-lg">
              Отправить заявку
            </button>

            <p class="text-xs text-gray-500 text-center">
              Нажимая кнопку, вы соглашаетесь с <a href="/UWS/privacy" class="text-brand-yellow underline">политикой конфиденциальности</a>
            </p>
          </form>
        </div>

        <!-- Map -->
        <div class="h-[500px] lg:h-auto bg-gray-100 rounded-xl overflow-hidden shadow-lg">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2540.5!2d30.5!3d50.45!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDDCsDI3JzAwLjAiTiAzMcKwMzAnMDAuMCJF!5e0!3m2!1suk!2sua!4v0000000000000!5m2!1suk!2sua"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Карта проезда"
            class="w-full h-full min-h-[400px]"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Additional Info -->
  <section class="section bg-gray-50 dark:bg-gray-900">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-heading font-bold mb-6 text-center">Как добраться</h2>
        
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-white rounded-xl p-6 shadow-lg dark:bg-gray-800">
            <h3 class="font-heading font-bold mb-4 dark:text-white">На автомобиле</h3>
            <ul class="space-y-2 text-gray-600 dark:text-gray-400">
              <li>• Из центра: по ул. Прикладная до дома №1</li>
              <li>• С Оболони: по ул. Северная, затем Прикладная</li>
              <li>• Парковка бесплатная возле офиса</li>
              <li>• Вход со стороны ул. Прикладная</li>
            </ul>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-lg dark:bg-gray-800">
            <h3 class="font-heading font-bold mb-4 dark:text-white">Общественным транспортом</h3>
            <ul class="space-y-2 text-gray-600 dark:text-gray-400">
              <li>• Метро "Героїв Дніпра" - 15 мин пешком</li>
              <li>• Маршрутки 1, 2, 3 - остановка "Прикладна"</li>
              <li>• Троллейбусы 7, 8 - остановка "Школа"</li>
              <li>• Автобусы 31, 45 - остановка "Ринок"</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Form submission handler with API integration
  const form = document.getElementById('contact-form');
  const submitBtn = form?.querySelector('button[type="submit"]');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    if (!form || !submitBtn) return;
    
    // Get form data - map to API field names
    const formData = new FormData(form);
    const data = {
      customer_name: formData.get('name'),
      customer_phone: formData.get('phone'),
      customer_email: formData.get('email') || null,
      service: formData.get('service'),
      message: formData.get('message') || null,
      source: 'contacts-page'
    };
    
    // Validate required fields
    if (!data.customer_name || !data.customer_phone) {
      alert('Пожалуйста, заполните обязательные поля');
      return;
    }
    
    // Show loading state
    const originalBtnText = submitBtn.innerHTML;
    submitBtn.innerHTML = '<span class="inline-flex items-center gap-2"><svg class="animate-spin h-5 w-5" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Отправка...</span>';
    submitBtn.disabled = true;
    
    try {
      const response = await fetch('/api/orders', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });
      
      const result = await response.json();
      
      if (response.ok && result.success) {
        alert('Спасибо за заявку! Мы свяжемся с вами в ближайшее время.');
        form.reset();
      } else {
        throw new Error(result.error || 'Ошибка при отправке заявки');
      }
    } catch (error) {
      console.error('Form submission error:', error);
      alert(error.message || 'Произошла ошибка. Пожалуйста, попробуйте позвонить нам по телефону.');
    } finally {
      submitBtn.innerHTML = originalBtnText;
      submitBtn.disabled = false;
    }
  });
</script>
